<script type="text/javascript">

function changeStatus(id,status){
		$.ajax({
			url: '<?php echo site_url('orders/change_status1'); ?>',
			type: "POST",
			data: {'id':id,'updatevalue':status},
			async: false,
			dataType: 'html',	
			success: function( response ) {			   
			   if(response == "success") {
					alert('User status changed successfully');
			   }
			}
		});
}
</script>


